# Cadastro de cartas
def cadastrar_carta():
    print("\n--- Cadastro de Carta ---")
    estado = input("Digite o estado da cidade: ")
    codigo = input("Digite o cÃ³digo da carta: ")
    nome = input("Digite o nome da cidade: ")
    
    while True:
        try:
            populacao = int(input("Digite a populaÃ§Ã£o da cidade: "))
            break
        except ValueError:
            print("Digite um nÃºmero vÃ¡lido.")
    
    while True:
        try:
            area = float(input("Digite a Ã¡rea da cidade (kmÂ²): "))
            break
        except ValueError:
            print("Digite um nÃºmero vÃ¡lido.")
    
    while True:
        try:
            pib = float(input("Digite o PIB da cidade (em milhÃµes): "))
            break
        except ValueError:
            print("Digite um nÃºmero vÃ¡lido.")
    
    while True:
        try:
            pontos_turisticos = int(input("Digite o nÃºmero de pontos turÃ­sticos: "))
            break
        except ValueError:
            print("Digite um nÃºmero vÃ¡lido.")
    
    carta = {
        "estado": estado,
        "codigo": codigo,
        "nome": nome,
        "populacao": populacao,
        "area": area,
        "pib": pib,
        "pontos_turisticos": pontos_turisticos
    }
    
    return carta

# Mostrar carta
def mostrar_carta(carta):
    print(f"\nCarta: {carta['nome']} ({carta['estado']})")
    print(f"CÃ³digo: {carta['codigo']}")
    print(f"PopulaÃ§Ã£o: {carta['populacao']}")
    print(f"Ãrea: {carta['area']} kmÂ²")
    print(f"PIB: {carta['pib']} milhÃµes")
    print(f"Pontos TurÃ­sticos: {carta['pontos_turisticos']}")

# ComparaÃ§Ã£o aninhada
def comparar_cartas(carta1, carta2, atributo):
    match atributo:
        case "populacao":
            if carta1["populacao"] > carta2["populacao"]:
                return carta1
            elif carta2["populacao"] > carta1["populacao"]:
                return carta2
        case "area":
            if carta1["area"] > carta2["area"]:
                return carta1
            elif carta2["area"] > carta1["area"]:
                return carta2
        case "pib":
            if carta1["pib"] > carta2["pib"]:
                return carta1
            elif carta2["pib"] > carta1["pib"]:
                return carta2
        case "pontos_turisticos":
            if carta1["pontos_turisticos"] > carta2["pontos_turisticos"]:
                return carta1
            elif carta2["pontos_turisticos"] > carta1["pontos_turisticos"]:
                return carta2
        case "densidade_populacional":
            dens1 = carta1["populacao"] / carta1["area"]
            dens2 = carta2["populacao"] / carta2["area"]
            if dens1 < dens2:
                return carta1
            elif dens2 < dens1:
                return carta2
    return None  # Empate

# Menu interativo
def menu_atributos():
    print("\nEscolha o atributo para comparaÃ§Ã£o:")
    print("1 - PopulaÃ§Ã£o")
    print("2 - Ãrea")
    print("3 - PIB")
    print("4 - Pontos TurÃ­sticos")
    print("5 - Densidade Populacional (menor vence)")
    
    while True:
        opcao = input("Digite o nÃºmero da opÃ§Ã£o: ")
        match opcao:
            case "1":
                return "populacao"
            case "2":
                return "area"
            case "3":
                return "pib"
            case "4":
                return "pontos_turisticos"
            case "5":
                return "densidade_populacional"
            case _:
                print("OpÃ§Ã£o invÃ¡lida. Tente novamente.")

# Programa principal
print("Bem-vindo ao Super Trunfo - PaÃ­ses (NÃ­vel Aventureiro)")

# Cadastro das cartas
carta1 = cadastrar_carta()
carta2 = cadastrar_carta()

# Mostrando cartas
mostrar_carta(carta1)
mostrar_carta(carta2)

# Menu de escolha
atributo_escolhido = menu_atributos()

# ComparaÃ§Ã£o
vencedor = comparar_cartas(carta1, carta2, atributo_escolhido)
if vencedor:
    print(f"\nðŸ† A carta vencedora Ã©: {vencedor['nome']} ({vencedor['estado']})")
    print(f"Atributo utilizado: {atributo_escolhido.replace('_',' ').title()}")
else:
    print("\nðŸ¤ Empate entre as cartas!")
