# Cadastro de cartas de cidades
def cadastrar_carta():
    print("\n--- Cadastro de Carta ---")
    estado = input("Digite o estado da cidade: ")
    codigo = input("Digite o c√≥digo da carta: ")
    nome = input("Digite o nome da cidade: ")
    
    while True:
        try:
            populacao = int(input("Digite a popula√ß√£o da cidade: "))
            break
        except ValueError:
            print("Por favor, digite um n√∫mero v√°lido.")
    
    while True:
        try:
            area = float(input("Digite a √°rea da cidade (km¬≤): "))
            break
        except ValueError:
            print("Por favor, digite um n√∫mero v√°lido.")
    
    while True:
        try:
            pib = float(input("Digite o PIB da cidade (em milh√µes): "))
            break
        except ValueError:
            print("Por favor, digite um n√∫mero v√°lido.")
    
    while True:
        try:
            pontos_turisticos = int(input("Digite o n√∫mero de pontos tur√≠sticos: "))
            break
        except ValueError:
            print("Por favor, digite um n√∫mero v√°lido.")
    
    carta = {
        "estado": estado,
        "codigo": codigo,
        "nome": nome,
        "populacao": populacao,
        "area": area,
        "pib": pib,
        "pontos_turisticos": pontos_turisticos
    }
    
    return carta

# Fun√ß√£o de compara√ß√£o
def comparar_cartas(carta1, carta2, atributo):
    print(f"\nComparando pelo atributo: {atributo}")
    
    if atributo == "densidade_populacional":
        densidade1 = carta1["populacao"] / carta1["area"]
        densidade2 = carta2["populacao"] / carta2["area"]
        if densidade1 < densidade2:
            vencedor = carta1
        elif densidade2 < densidade1:
            vencedor = carta2
        else:
            vencedor = None
    else:
        if carta1[atributo] > carta2[atributo]:
            vencedor = carta1
        elif carta2[atributo] > carta1[atributo]:
            vencedor = carta2
        else:
            vencedor = None
    
    return vencedor

# Exibi√ß√£o das cartas
def mostrar_carta(carta):
    print(f"\nCarta: {carta['nome']} ({carta['estado']})")
    print(f"C√≥digo: {carta['codigo']}")
    print(f"Popula√ß√£o: {carta['populacao']}")
    print(f"√Årea: {carta['area']} km¬≤")
    print(f"PIB: {carta['pib']} milh√µes")
    print(f"Pontos Tur√≠sticos: {carta['pontos_turisticos']}")

# Programa principal
print("Bem-vindo ao Super Trunfo - Pa√≠ses (N√≠vel Novato)")

# Cadastro das cartas
carta1 = cadastrar_carta()
carta2 = cadastrar_carta()

# Mostrando cartas
mostrar_carta(carta1)
mostrar_carta(carta2)

# Escolha do atributo para compara√ß√£o
atributos_validos = ["populacao", "area", "pib", "pontos_turisticos", "densidade_populacional"]
while True:
    atributo_escolhido = input(f"\nEscolha um atributo para compara√ß√£o {atributos_validos}: ")
    if atributo_escolhido in atributos_validos:
        break
    print("Atributo inv√°lido. Tente novamente.")

# Compara√ß√£o
vencedor = comparar_cartas(carta1, carta2, atributo_escolhido)
if vencedor:
    print(f"\nüèÜ A carta vencedora √©: {vencedor['nome']} ({vencedor['estado']})")
else:
    print("\nü§ù Empate entre as cartas!")
